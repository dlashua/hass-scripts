{
  "name": "hass-scripts",
  "version": "0.1.0",
  "description": "Node.js based script runner for use with Home Assistant and MQTT based Smart Home environments",
  "main": "index.js",
  "scripts": {
    "test": "camo-purge ; xo && nyc mocha test.js --exit && nyc report --reporter=text-lcov | coveralls --force",
    "testonly": "mocha test.js --exit",
    "lintfix": "xo --fix"
  },
  "bin": {
    "hass-scripts": "index.js"
  },
  "author": "Daniel Lashua <daniel@inklog.net>",
  "license": "MIT",
  "dependencies": {
    "coffee-compiler": "^0.3.2",
    "coffee-script": "^1.12.7",
    "mqtt": "^2.9.2",
    "node-homeassistant": "dlashua/node-homeassistant",
    "node-schedule": "^1.2.3",
    "suncalc": "^1.8.0",
    "watch": "^1.0.2",
    "yalm": "^4.0.2",
    "yargs": "^12.0.5"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "engineStrict": true,
  "preferGlobal": true,
  "devDependencies": {
    "camo-purge": "1.0.2",
    "coveralls": "3.0.2",
    "gulp": "4.0.0",
    "jsdoc-to-markdown": "4.0.1",
    "mocha": "5.2.0",
    "nyc": "13.1.0",
    "should": "13.2.3",
    "stream-splitter": "0.3.2",
    "timekeeper": "2.1.2",
    "xo": "0.23.0"
  },
  "directories": {
    "doc": "doc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dlashua/hass-scripts"
  },
  "keywords": [
    "MQTT",
    "javascript",
    "coffeescript",
    "node.js",
    "npm",
    "sandbox",
    "vm",
    "Smart",
    "Home",
    "Internet",
    "of",
    "Things",
    "IoT"
  ],
  "bugs": {
    "url": "https://github.com/dlashua/hass-scripts/issues"
  },
  "homepage": "https://github.com/dlashua/hass-scripts",
  "xo": {
    "space": 4,
    "ignores": [
      "testscripts/**",
      "test.js",
      "Gulpfile.js",
      "mockdate.js"
    ],
    "rules": {
      "unicorn/catch-error-name": 1,
      "prefer-spread": 1
    }
  },
  "nyc": {
    "include": [
      "index.js",
      "config.js",
      "sandbox/*.js"
    ]
  }
}
